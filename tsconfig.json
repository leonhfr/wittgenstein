{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "importHelpers": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "pretty": true,
    "declaration": true,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
